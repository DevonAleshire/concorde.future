{
  "compilerOptions": {
    "noImplicitAny": false,
    "noEmitOnError": true,
    "removeComments": false,
    "sourceMap": true,
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "alwaysStrict": true,
    "types": [],
    "baseUrl": ".",
    "paths": {
      "@services\\*": [ "scripts\\services\\*" ],
      "testLibs/*": [ "scripts/testLibs/*" ]
    },
    "jsx": "react",
    "lib": ["es2015", "dom"]
  },
  "compileOnSave": false,
  "exclude": [
    "**/__tests__/*.ts",
    "node_modules",
    "obj",
    "bin"
  ],
  "include": [
    "scripts"
  ]
}